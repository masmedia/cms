<!DOCTYPE html>
<html>
<head>
	<title>Simple CMS: <%= @page_title || "Admin Area" %></title>
	<%= stylesheet_link_tag('admin', :media => 'all') %>

	<div id="header">
		Simple CMS Admin
	</div>


</head>
<body>
	<div id="main">
		<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
		<% end %>

		<div id="content">
			<!-- Before yield-->
			<%= yield %>
			<!-- After yield-->
		</div>
	</div>

	<div id="footer">
		<p id="copyright">&copy; lynda.com</p>
		
	</div>

</body>
</html>